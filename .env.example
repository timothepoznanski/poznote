# Poznote Configuration
# Copy this file to .env and customize the values

# Authentication credentials
POZNOTE_USERNAME=admin

# Password can be either plain text or a bcrypt hash
# Plain text:
POZNOTE_PASSWORD=admin123!

# OR use a hashed password:
# Generate a hash: docker run --rm ghcr.io/timothepoznanski/poznote:latest php -r "echo password_hash('your_password', PASSWORD_DEFAULT);"
# Then use single quotes around the hash:
# POZNOTE_PASSWORD='$2y$10$YourHashedPasswordHere...'

# Web server port
HTTP_WEB_PORT=8040
